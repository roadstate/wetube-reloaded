extends base.pug


block content
   video(src="/" + video.fileUrl , controls)
   div
      p=video.description
      small=video.createdAt
   div    
      a(href=`/users/${video.owner._id}`) #{video.owner.name}의 업로드한 동영상
     
   if String(video.owner._id) === String(loggedInUser._id)  
      br
      a(href=`${video.id}/edit`) 수정하기 &rarr;
      br
      a(href=`${video.id}/delete`) 삭제하기 &rarr;