extends base.pug


block content
    h4 Change Title of video
    form(method="POST")
        input(name="title", placeholder="Video title",value=video.title,required)
        input(placeholder="Description",required,type="text",name ="description",value=video.description)
        input(placeholder="Hashtags, seperated by comma.",type="text",name ="hashtags",value=video.hashtags.join())
        input(value="Save",type="submit")